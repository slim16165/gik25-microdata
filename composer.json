{
  "name": "gik25/gik25-microdata",
  "version": "2.0.1",
  "description": "Plugin WordPress multipiattaforma per gestione shortcode, microdata, ottimizzazioni SEO e widget interattivi. Supporta TotalDesign.it, SuperInformati.com, NonSoloDieti.it, ChieCosa.it, Prestinforma.it",
  "type": "wordpress-plugin",
  "minimum-stability": "dev",
  "license": "proprietary",
  "authors": [
    {
      "name": "Gianluigi Salvi",
      "email": "gianluigi.salvi@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "gik25microdata\\": "include/class/",
      "gik25microdata\\site_specific\\": "include/site_specific/"
    }
  },
  "require": {
    "athari/yalinqo": "^2.0",
    "yiisoft/html": "^3.0",
    "illuminate/collections": "^10.0",
    "monolog/monolog": "^3.0"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "phpstan/extension-installer": "^1.2.0",
    "szepeviktor/phpstan-wordpress": "dev-master",
    "vimeo/psalm": "^5.0",
    "phpunit/phpunit": "^10.0",
    "yoast/phpunit-polyfills": "^1.0",
    "rector/rector": "^0.19",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "scripts": {
    "validate-syntax": [
      "bash scripts/validate-php-syntax.sh"
    ],
    "validate-syntax-windows": [
      "powershell -ExecutionPolicy Bypass -File scripts/validate-php-syntax.ps1"
    ],
    "install-pre-commit": [
      "bash scripts/install-pre-commit-hook.sh"
    ],
    "install-pre-commit-windows": [
      "powershell -ExecutionPolicy Bypass -File scripts/install-pre-commit-hook.ps1"
    ],
    "test": [
      "phpunit"
    ],
    "phpstan": [
      "phpstan analyse"
    ],
    "psalm": [
      "psalm"
    ],
    "cs-fix": [
      "php-cs-fixer fix"
    ],
    "cs-fix-dry-run": [
      "php-cs-fixer fix --dry-run --diff"
    ],
    "rector": [
      "rector process"
    ],
    "test": [
      "phpunit"
    ],
    "test-coverage": [
      "phpunit --coverage-html coverage --coverage-clover coverage.xml"
    ]
  }
}
