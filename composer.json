{
  "name": "gik25/gik25-microdata",
  "description": "",
  "type": "wordpress-plugin",
  "minimum-stability": "dev",
  "license": "proprietary",
  "authors": [
    {
      "name": "Gianluigi Salvi",
      "email": "gianluigi.salvi@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "gik25microdata\\": "include/class/",
      "gik25microdata\\site_specific\\": "include/site_specific/"
    }
  },
  "require": {
    "athari/yalinqo": "^2.0",
    "yiisoft/html": "^3.0",
    "illuminate/collections": "^10.0",
    "monolog/monolog": "^3.0"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "phpstan/extension-installer": "^1.2.0",
    "szepeviktor/phpstan-wordpress": "dev-master",
    "vimeo/psalm": "^5.0",
    "phpunit/phpunit": "^10.0",
    "rector/rector": "^0.19",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "scripts": {
    "validate-syntax": [
      "bash scripts/validate-php-syntax.sh"
    ],
    "validate-syntax-windows": [
      "powershell -ExecutionPolicy Bypass -File scripts/validate-php-syntax.ps1"
    ],
    "test": [
      "phpunit"
    ],
    "phpstan": [
      "phpstan analyse"
    ],
    "psalm": [
      "psalm"
    ],
    "cs-fix": [
      "php-cs-fixer fix"
    ],
    "rector": [
      "rector process"
    ]
  }
}
